# ==========================================
# EST√ÅGIO 1: BUILD
# ==========================================
FROM node:20-alpine AS build

WORKDIR /app

# Copiar package files
COPY package*.json ./

# Instalar depend√™ncias
RUN npm ci --silent

# Copiar c√≥digo fonte
COPY . .

# ‚úÖ CR√çTICO: Passar vari√°vel de ambiente para o Vite durante o build
ARG VITE_API_BASE_URL=/api
ENV VITE_API_BASE_URL=${VITE_API_BASE_URL}

# Debug: Mostrar qual URL est√° sendo usada
RUN echo "üîß Building with VITE_API_BASE_URL=${VITE_API_BASE_URL}"

# Build da aplica√ß√£o
RUN npm run build

# ==========================================
# EST√ÅGIO 2: PRODU√á√ÉO
# ==========================================
FROM nginx:1.25-alpine

# Copiar build do est√°gio anterior
COPY --from=build /app/dist /usr/share/nginx/html

# Copiar configura√ß√£o do Nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expor porta 80
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --quiet --tries=1 --spider http://localhost/ || exit 1

# Iniciar Nginx
CMD ["nginx", "-g", "daemon off;"]
